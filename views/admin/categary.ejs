<%- include('partials/header.ejs') %>
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <a href="/addCategary">
                <button type="button" class="btn btn-info btn-lg btn-block">Add Categary

                </button>
            </a>


            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">custemers</h4>
                        <p class="card-description">
                            <!-- Add class <code>.table-striped</code> -->
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Categary

                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Date
                                        </th>
                                        <th>
                                            Offer
                                        </th>


                                    </tr>
                                </thead>
                                <% for(var categorylist of allCategory) { %>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <%= categorylist.categary %>
                                            </td>

                                            <td class="py-1">
                                                <!-- <img src="../../images/faces/face1.jpg" alt="image" /> -->
                                                <img src="/images/<%= categorylist.imageUrl[0].filename %>"
                                                    alt="image" />
                                            </td>

                                            <td>
                                                <%= categorylist.createdAt %>
                                            </td>
                                            <td>
                                                <%= categorylist.offer %>%
                                            </td>

                                            <td>
                                                <a href="/editCategory/<%= categorylist._id %>">

                                                    <button type="button"
                                                        class="btn btn-info btn-rounded btn-fw">Edit</button>
                                                </a>


                                                <a href="/categoryRemove/<%= categorylist._id %>">
                                                    <button type="button"
                                                        class="btn btn-danger btn-rounded btn-fw">Delete</button>
                                                </a>



                                            </td>

                                        </tr>

                                    </tbody>
                                    <% } %>


                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <%- include('partials/_footer.ejs') %>