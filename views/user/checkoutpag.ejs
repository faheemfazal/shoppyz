                    walletBalance

                },
                method: "post",
                success: (response) => {
                    console.log(response);
                    if (response.status) {
                        Swal.fire({
                            title: 'Order Placed Successfully',
                            icon: "success",
                            showDenyButton: false,
                            confirmButtonText: " Order Successfully",
